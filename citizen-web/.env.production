# Production Environment Configuration for Civic Issue Reporter

# Disable development mode (enables backend API calls)
REACT_APP_DEV_MODE=false

# Backend API Configuration
# Set to true to use real backend API in production
REACT_APP_BACKEND_ENABLED=true

# Backend API URL (replace with your actual production API URL)
REACT_APP_API_URL=https://api.civicissues.gov/api

# Production optimizations
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Security settings
HTTPS=true

# Performance settings
BUILD_PATH=build
PUBLIC_URL=.

# Analytics and monitoring (uncomment and configure as needed)
# REACT_APP_ANALYTICS_ID=your-analytics-id
# REACT_APP_SENTRY_DSN=your-sentry-dsn
# REACT_APP_HOTJAR_ID=your-hotjar-id

# Feature flags for production
REACT_APP_DEBUG_MODE=false
REACT_APP_CONSOLE_LOGGING=false

# Service worker settings
REACT_APP_SW_ENABLED=true

# Cache settings
REACT_APP_CACHE_VERSION=1.0.0

# API timeout settings (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# Rate limiting
REACT_APP_MAX_REQUESTS_PER_MINUTE=60

# File upload limits
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Map and location services
REACT_APP_MAP_API_KEY=your-map-api-key
REACT_APP_GEOCODING_SERVICE=nominatim

# Notification settings
REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key
REACT_APP_PUSH_NOTIFICATIONS_ENABLED=true

# Social login (if implemented)
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Error reporting
REACT_APP_ERROR_REPORTING_ENABLED=true

# Performance monitoring
REACT_APP_PERFORMANCE_MONITORING=true
