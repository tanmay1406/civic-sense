# Development Environment Configuration for Civic Issue Reporter

# Disable development mode (enables backend API calls)
REACT_APP_DEV_MODE=false

# Backend API Configuration
# Set to true to use real backend API in development
REACT_APP_BACKEND_ENABLED=true

# Backend API URL (used when REACT_APP_BACKEND_ENABLED=true)
REACT_APP_API_URL=http://localhost:3001/api

# Development server port
PORT=3004

# Enable hot reloading
FAST_REFRESH=true

# Development features
GENERATE_SOURCEMAP=true

# Mock user data for development (disabled)
# REACT_APP_MOCK_USER_EMAIL=demo@civicissues.com
# REACT_APP_MOCK_USER_NAME=Demo User
# REACT_APP_MOCK_USER_ROLE=citizen

# Debug settings
REACT_APP_DEBUG_MODE=true
REACT_APP_CONSOLE_LOGGING=true

# Disable service worker in development
REACT_APP_SW_ENABLED=false

# Browser settings
BROWSER=default
